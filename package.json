{
  "name": "fullfabric-fe-code-challenge",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run redocly && concurrently -c \"blue,green\" \"npm run build:watch\" \"node --watch index.js\"",
    "test": "npm run redocly && jest --watchAll",
    "lint": "eslint --fix .",
    "build": "node ./esbuild.mjs build",
    "build:watch": "node ./esbuild.mjs --watch",
    "redocly": "node_modules/.bin/redocly build-docs docs/openapi.yaml --output docs/index.html"
  },
  "keywords": [],
  "author": "Jo√£o Ferreira",
  "dependencies": {
    "@koa/router": "^13.1.0",
    "@redocly/cli": "^1.34.3",
    "joi": "^17.12.2",
    "koa": "^3.0.0",
    "koa-body": "^6.0.1",
    "lodash": "^4.17.21",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@fullfabric/eslint-config": "github:fullfabric/eslint-cfg#v1.0.0",
    "@fullfabric/prettier-config": "github:fullfabric/prettier-cfg",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.4",
    "esbuild-copy-static-files": "^0.1.0",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-n": "^17.18.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "postcss-modules": "^6.0.1",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1"
  },
  "eslintConfig": {
    "extends": "@fullfabric",
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".json"
          ],
          "paths": [
            "be"
          ]
        }
      }
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setupAfterEnv.js"
    ]
  }
}
