{
  "name": "fullfabric-fe-code-challenge",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "npm run redocly && concurrently -c \"blue,green\" \"npm run build:watch\" \"node --watch index.js\"",
    "test": "npm run redocly && jest --watchAll",
    "test:ci": "npm run redocly && jest",
    "lint": "eslint --fix .",
    "lint:ci": "eslint .",
    "prettier": "prettier --write .",
    "prettier:ci": "prettier --check .",
    "build": "node ./esbuild.mjs build",
    "build:watch": "node ./esbuild.mjs --watch",
    "redocly": "node_modules/.bin/redocly build-docs docs/openapi.yaml --output docs/index.html"
  },
  "keywords": [],
  "author": "Jo√£o Ferreira",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "@redocly/cli": "^1.34.3",
    "joi": "^17.12.2",
    "koa": "^3.0.0",
    "koa-body": "^6.0.1",
    "lodash": "^4.17.21",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.1",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@deanc/esbuild-plugin-postcss": "^1.0.2",
    "@fullfabric/eslint-config": "github:fullfabric/eslint-cfg#v1.0.0",
    "@fullfabric/prettier-config": "github:fullfabric/prettier-cfg#v3.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^30.0.0-beta.3",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.4",
    "esbuild-copy-static-files": "^0.1.0",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-promise": "^6.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jest-fixed-jsdom": "^0.0.9",
    "msw": "^2.8.7",
    "postcss": "^8.5.3",
    "postcss-modules": "^6.0.1",
    "prettier": "^3.5.3",
    "sass-embedded": "^1.71.1",
    "supertest": "^7.1.1"
  },
  "prettier": "@fullfabric/prettier-config",
  "eslintConfig": {
    "extends": "@fullfabric",
    "ignorePatterns": [
      "fe/dist/**"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".json"
          ],
          "paths": [
            "be"
          ]
        }
      }
    }
  },
  "jest": {
    "projects": [
      {
        "displayName": "Backend",
        "testMatch": [
          "<rootDir>/be/**/__tests__/*.js"
        ],
        "setupFilesAfterEnv": [
          "<rootDir>/jest/beSetupAfterEnv.js"
        ]
      },
      {
        "displayName": "Frontend",
        "testMatch": [
          "<rootDir>/fe/**/__tests__/*.js"
        ],
        "setupFilesAfterEnv": [
          "<rootDir>/jest/feSetupAfterEnv.js"
        ],
        "moduleNameMapper": {
          "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
        },
        "testEnvironment": "jest-fixed-jsdom",
        "testEnvironmentOptions": {
          "customExportConditions": [
            ""
          ]
        }
      }
    ]
  }
}
